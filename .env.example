# Application
APP_NAME="Modern Admin Dashboard"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost

# Database
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=todays-task
DB_USERNAME=root
DB_PASSWORD=

# Security
JWT_SECRET=your-secret-key-here-change-this-in-production
JWT_EXPIRATION=3600
CSRF_TOKEN_NAME=csrf_token

# Session
SESSION_LIFETIME=120
SESSION_DRIVER=file

# Mail
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@admin.com
MAIL_FROM_NAME="${APP_NAME}"

# File Upload
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf,doc,docx

# Two Factor Authentication
TWO_FACTOR_ENABLED=true

# Logging
LOG_CHANNEL=daily
LOG_LEVEL=debug
